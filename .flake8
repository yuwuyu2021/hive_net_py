[flake8]
max-line-length = 88
extend-ignore = E203, W503
exclude = .git,__pycache__,build,dist,*.egg-info,venv
max-complexity = 10
select = C,E,F,W,B,B950
extend-select = B950
ignore = E203, E501, W503
per-file-ignores =
    # imported but unused in __init__.py files
    __init__.py: F401
    # allow print statements in test files
    test_*.py: T201

# Import order settings
import-order-style = google
application-import-names = server,client,common

# Documentation settings
docstring-convention = google